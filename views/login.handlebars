<video autoplay muted loop id="loginVideo">
   <source src="" type="video/mp4">
</video>

<div class="container" id="loginContain">
            <div class="d-flex justify-content-center h-100">
                <div class="card" id="cardLogin">
                    <div class="card-header">
                        <h3>Sign In</h3>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="form-group">
                                <label class="loginLabel" for="email-login">Email</label>
                                <input type="email" class="form-control" id="email-login" placeholder="Email"/>
                            </div>

                            <div class="form-group">
                                <label class="loginLabel" for="password-login">Password</label>
                                <input type="password" class="form-control" id="password-login" placeholder="Password"/>
                            </div>

                            <div class="form-group">
                                <input type="submit" value="Login" class="btn loginBtn">
                            </div>
                        </form>
                    </div>
                    <div class="card-footer">
                        <div class="dropdown">
                            <button class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Need An Account?
                            </button>
                            <div class="dropdown-menu">
                            <form class="signup-form">
                                <div class="form-group">
                                    <label class="loginLabel" for="username-signup">Username:</label>
                                    <input class="form-control" type="text" id="username-signup" />
                                </div>
                                <div class="form-group">
                                    <label class="loginLabel" for="email-signup">Email:</label>
                                    <input class="form-control" type="text" id="email-signup" />
                                </div>
                                <div class="form-group">
                                    <label class="loginLabel" for="password-signup">Password:</label>
                                    <input class="form-control" type="password" id="password-signup" />
                                </div>
                                <div class="form-group">
                                    <button class="btn signUpBtn" type="submit">Signup</button>
                                </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

<script src="/js/loginVideo.js"></script>
<script src="/js/login.js"></script>
<script src="/js/signupForm.js"></script>
